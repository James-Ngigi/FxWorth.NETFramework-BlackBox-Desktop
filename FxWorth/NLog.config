<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets async="true">
    <target xsi:type="Console" name="cons"
            layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString,StackTrace}" />
    <target xsi:type="File" name="rotatingFileTarget"
            fileName="${basedir}/Log files/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString,StackTrace}"
            archiveEvery="Day"
            archiveNumbering="Sequence"
            maxArchiveFiles="7" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="cons" />
    <logger name="*" minlevel="Debug" writeTo="rotatingFileTarget" />
  </rules>
</nlog>